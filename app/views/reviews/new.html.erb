<!--Partials Nav bar-->
<%= render 'partials/nav_show' %>

<header>
  <h1>Write a Bootcamp Review</h1>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-12" id="review-form">
      <div class="the-form">
        <form id="bootcamp-review-form">

          <!--First question: overall, text-field-->
          <h3>What was your overall experience at this bootcamp?</h3>
          <br>
        		<textarea cols="80" rows="5" name="bootcamp_review[content]" placeholder='How was the application process? What was the best part of the experience? What could be improved?'></textarea>

  		<h3>Did you find employment after graduation?</h3>
      <div class="radio">
  		  <label><input type="radio" name="employment" id="employed" value="1">Employed</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="not-employed">Not Employed</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="still-attending">Still Attending</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="not-seeking-employment">Not Seeking Employment</label>
  		</div>
            <br><br>

              <!--Second question: employment, radio-->
          		<div class="radio"><h3>Did you find employment after graduation?</h3>
          		  <label><input type="radio" name="employment" id="employed" value="1">Employed</label>
          		</div>
          		<div class="radio">
          		  <label><input type="radio" name="employment" id="not-employed">Not Employed</label>
          		</div>
          		<div class="radio">
          		  <label><input type="radio" name="employment" id="still-attending">Still Attending</label>
          		</div>
          		<div class="radio">
          		  <label><input type="radio" name="employment" id="not-seeking-employment">Not Seeking Employment</label>
          		</div>

              <br>

              <!--Third question: worth it, number-->
          		<div class="radio"><h3>Was the course worth the tuition?</h3>
          		  <label><input type="radio" name="worth" id="worth-it-yes">Yes</label>
          		</div>
          		<div class="radio">
          		  <label><input type="radio" name="worth" id="worth-it-no">No</label>
          		</div>

                <br>  

                 <!--Multiple ratings, number-->
              <h3>On a scale of 1 - 10, how would you rate...?</h3>   
                <ul>
                  <li>  Facilities/Campus <input type="number"  id="campus-rate" value="1" min="1" max="10"></li> 
                  <li>Job Support & Career Services <input type="number" id="job-supp-rate" value="1" min="1" max="10"></li>
                  <li><p>Location <input type="number"  id="location-rate" value="1" min="1" max="10"></li>
                </ul> 

                <br>     	
        </form>
      

<!-- <form id="instructor-review-form">
	<textarea cols="30" rows="5" id="instructor-review-form" name="instructor_review[text]" placeholder='Instructor'></textarea>
</form> -->

    <button id="review-submit" class="btn btn-default button">Submit</button>
      </div>
    </div>
  </div>
</div>


<!--Footer-->
<%= render "partials/footer_show" %>